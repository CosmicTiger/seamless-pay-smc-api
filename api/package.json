{
    "name": "seamless-pay-api",
    "version": "1.0.0",
    "description": "API for the best payment method application for B2C and C2C",
    "license": "ISC",
    "author": "",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "clean": "rm -rf dist",
        "build": "tsc -p tsconfig.json",
        "build:watch": "tsc -p tsconfig.json -w",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "start": "node --enable-source-maps dist/index.js",
        "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm --enable-source-maps -r dotenv/config src/index.ts\"",
        "tsx-dev": "tsx watch -r dotenv/config src/index.ts",
        "lint": "eslint \"src/**/*.{ts,js}\" --max-warnings=0",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@scalar/express-api-reference": "^0.8.22",
        "abitype": "^1.1.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-zod-api": "^25.5.3",
        "http-status-codes": "^2.3.0",
        "morgan": "^1.10.0",
        "tsx": "^4.20.6",
        "viem": "^2.38.4",
        "winston": "^3.18.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@swc/core": "^1.13.5",
        "@swc/helpers": "^0.5.17",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.4",
        "@types/jest": "^30.0.0",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.9.1",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "eslint": "^9.38.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "jest": "^30.2.0",
        "nodemon": "^3.1.10",
        "regenerator-runtime": "^0.14.1",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
